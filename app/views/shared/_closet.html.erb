
    <div class="row">
        <div class="clothing-type-title">
          <p>shirts</p>
        </div>
        <div class="divider"></div>
          <div class="horizontal">
              <div class="clothing-type" data-section-id="shirt">
                <% shirts = @items.select {|item| item.category == "shirt"} %>
                  <% shirts.each do |item| %>
                    <div class="col s12 m4 l4 clothing-type">
                        <div class="item" data-item-id="<%= item.id %>">
                            <%= image_tag item.image.url(:small) %><br>
                          <%= link_to "edit", controller: "items", action: "edit", id: item.id %>
                        </div>
                    </div>
                  <% end %>
              </div>
          </div>
        </div>
