<div class="row">
  <div class="clothing-type-title">
    shirts
  </div>
  <div class="divider"></div>
  <div class="horizontal">
    <div>
      <% shirts = @items.select {|item| item.category == "shirt"} %>
      <% shirts.each do |item| %>
      <div class="item left" data-item-id="<%= item.id %>" data-section-id="shirt" data-image-url="<%= url_for(item.image) if item.image.attached? %>">
        <%= image_tag url_for(item.image.variant(resize_to_limit: [200, 200]).processed) if item.image.attached? %>
      </div>
      <% end %>
    </div>
  </div>
</div>

