<%= render "shared/header" %>
<div class="container">
  <h1>Edit Item</h1>
  <%= form_for @item do |f| %>
  <div class="row">
    <div class="col m6">
      <label> Name </label>
      <%= f.text_field :name, value: @item.name, placeholder: "Enter new Name" %>
      <label> Brand </label>
      <%= f.text_field :brand, value: @item.brand, placeholder: "Enter new Brand" %>
      <label> Category </label>
      <%= f.text_field :category, value: @item.category, placeholder: "Enter new Category" %>
      <%= f.file_field :image %>
      <%= f.submit "Update Item" %>
    </div>
    <div class="col m6">
      <%= image_tag @item.image.url(:large) %>
    </div>
  </div>
  <% end %>
  <%= button_to "Delete Item", { action: "destroy", id: @item.id }, method: :delete %>
</div>
